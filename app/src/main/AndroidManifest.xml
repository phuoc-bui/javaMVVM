<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redhelmet.alert2me">

    <uses-feature
        android:name="android.hardware.wifi"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
        android:name=".A2MApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/notification_bar_icon" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@android:color/transparent" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.redhelmet.alert2me.ui.splash.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.redhelmet.alert2me.ui.termsandcondition.TermConditionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.HomeActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.hint.HintsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.AddStaticZone"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.AddStaticZoneLocation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.ShareWatchZone"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.AddStaticZoneNotification"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.AddStaticZoneNotificationTypes"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.AddStaticZoneNotificationStatus"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.EditWatchZone"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.EventDetailsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.EventMapFilter"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.EventMapStatus"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.EventMapTypes"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.AddObservation"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.ObservationWhatCategory"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.ObservationLocation"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.redhelmet.alert2me.ui.activity.ObservationComments"
            android:theme="@style/AppTheme" />

        <!-- [Start firebase_service] -->
        <service android:name="com.redhelmet.alert2me.core.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- [END firebase_service] -->

        <activity android:name="com.redhelmet.alert2me.ui.activity.ClusterEventList" />

        <service
            android:name="com.redhelmet.alert2me.ui.services.ActivityRecognizedService"
            android:process=":activityRecognizedService"
            android:exported="false"/>
        <service
            android:name="com.redhelmet.alert2me.ui.services.ProximityLocationManager"
            android:enabled="true"
            android:exported="false"
            android:process=":proximityLocationManager" />
        <service
            android:name="com.redhelmet.alert2me.ui.services.BackgroundDetectedActivitiesService"
            android:enabled="true"
            android:exported="false"></service>
    </application>

</manifest>