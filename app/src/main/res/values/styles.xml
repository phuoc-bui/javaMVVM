<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.A2M" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="colorPrimaryDark">@color/navigationnarStatusColor</item>
        <item name="colorPrimary">@color/navigationnarHeaderColor</item>
        <item name="colorAccent">@color/colorPink</item>
        <item name="android:colorBackground">@color/navigationnarHeaderColor</item>
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="android:textColorPrimary">@color/navigationnarTextTintColor</item>
        <item name="android:textColorSecondary">@color/navigationnarTextTintColor</item>
        <item name="android:dialogTheme">@style/Theme.A2M.Dialog</item>
    </style>

        <style name="Theme.A2M.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
            <item name="colorAccent">#003f5e</item>
        </style>

    <style name="Widget.A2M.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.A2M.Toolbar</item>
        <item name="android:background">@color/navigationnarHeaderColor</item>
    </style>

    <style name="Widget.A2M.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.A2M.TabItem.Title</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.A2M.TabLayout.Bottom" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@drawable/tab_black_top_border</item>
        <item name="tabTextAppearance">@style/TextAppearance.A2M.TabItem.Subtitle</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="Widget.A2M.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.A2M.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
    </style>

    <style name="Widget.A2M.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.A2M.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="TextAppearance.A2M.Toolbar" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.A2M.FadingSnackbarAction" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/teal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.A2M.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.A2M.TextInputLayout.TextInputEditText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="TextAppearance.A2M.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.A2M.TabItem.Title" parent="TextAppearance.MaterialComponents.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.A2M.TabItem.Subtitle" parent="TextAppearance.MaterialComponents.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.A2M.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.A2M.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle2">

    </style>

    <style name="TextAppearance.A2M.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColorGrey</item>
    </style>

    <style name="TextAppearance.A2M.Event.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color</item>
    </style>

    <style name="FilePickerTheme" parent="Theme.A2M">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
