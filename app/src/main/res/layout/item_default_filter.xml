<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.redhelmet.alert2me.ui.eventfilter.defaultfilter.EventGroupItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/default_head_always"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/spacing_micro"
            android:gravity="center_horizontal"
            android:text="@string/always_on"
            android:textColor="#009900"
            android:visibility="@{viewModel.showToggleAlways}" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/default_head_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center_horizontal"
            android:theme="@style/Widget.A2M.SwitchCompatStyle"
            android:checked="@{viewModel.toggleChecked}"
            android:visibility="@{viewModel.showToggleSwitch}"
            android:onClick="@{v -> viewModel.onToggleSwitchClick(v)}"/>

        <com.redhelmet.alert2me.ui.widget.CollapsibleCard
            android:id="@+id/collapsible_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardDescription="@{viewModel.description}"
            app:cardTitle="@{viewModel.title}" />
    </LinearLayout>
</layout>
