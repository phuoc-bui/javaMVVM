<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.redhelmet.alert2me.ui.help.HelpViewModel"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.A2M.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            app:passwordToggleEnabled="true"
            android:hint="@string/help_update_old_password">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_input_old_password"
                style="@style/TextAppearance.A2M.TextInputLayout.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="@={viewModel.oldPassword}" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout1"
            style="@style/Widget.A2M.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            app:passwordToggleEnabled="true"
            android:hint="@string/help_update_new_password">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_input_new_password"
                style="@style/TextAppearance.A2M.TextInputLayout.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="@={viewModel.newPassword}" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout2"
            style="@style/Widget.A2M.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            app:passwordToggleEnabled="true"
            android:hint="@string/register_repeat_password_hint">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_input_repeat_password"
                style="@style/TextAppearance.A2M.TextInputLayout.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="@={viewModel.repeatPassword}" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.button.MaterialButton
            style="@style/Widget.A2M.Button"
            android:layout_width="@dimen/login_button_width"
            android:layout_height="wrap_content"
            android:enabled="@{viewModel.enableUpdateButton}"
            android:onClick="@{() -> viewModel.onUpdateClick()}"
            android:text="@string/help_update_button" />
    </LinearLayout>
</layout>