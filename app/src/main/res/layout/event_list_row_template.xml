<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.redhelmet.alert2me.ui.home.event.EventItemViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_event_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@{viewModel.eventIcon}"
            tools:src="@drawable/ea_logo" />

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxLines="3"
            android:text="@{viewModel.event.type}"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/list_event_location"
            app:layout_constraintEnd_toStartOf="@+id/barrier"
            app:layout_constraintStart_toEndOf="@+id/img_event_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="Bushfire" />

        <TextView
            android:id="@+id/list_event_location"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:maxLines="3"
            android:minLines="2"
            android:text="@{viewModel.eventLocation}"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_event_distance"
            app:layout_constraintStart_toEndOf="@+id/img_event_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name"
            tools:text="Docklands VIC" />

        <TextView
            android:id="@+id/tv_event_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="end"
            android:text="@{viewModel.eventTimeAgo}"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_event_distance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5 days" />

        <TextView
            android:id="@+id/tv_event_distance"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="end"
            android:text="@{viewModel.eventDistance}"
            android:textSize="13sp"
            android:visibility="@{viewModel.isStateWide}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_time_ago"
            tools:text="52345 km" />

        <android.support.constraint.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="tv_event_time_ago,tv_event_distance"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="567dp" />

    </android.support.constraint.ConstraintLayout>
</layout>