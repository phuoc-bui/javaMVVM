<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.redhelmet.alert2me.ui.eventdetail.ItemSectionViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_normal"
            android:textColor="@{viewModel.titleColor}"
            android:text="@{viewModel.sectionTitle}"
            tools:text="London Terror Attack"
            binding:top_rounded_background_color="@{viewModel.eventColor}"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            binding:adapter="@{viewModel.adapter}"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/txt_title"/>
    </android.support.constraint.ConstraintLayout>
</layout>