<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.redhelmet.alert2me.ui.event.EventViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:cameraTargetLat="-23.8760232"
            map:cameraTargetLng="128.6353168"
            map:cameraZoom="03"
            map:uiCompass="false"
            map:uiZoomControls="false" />

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <com.redhelmet.alert2me.autocomplete.AutoCompleteLocation
                android:id="@+id/autocomplete_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/cluster_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_layout"
            app:srcCompat="@drawable/ic_cluster" />

        <ImageButton
            android:id="@+id/location_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cluster_events"
            app:srcCompat="@drawable/ic_map_location" />

        <ImageButton
            android:id="@+id/selected_map_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_terrain" />

        <ImageButton
            android:id="@+id/map_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:background="@null"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/selected_map_type"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_road" />

        <ImageButton
            android:id="@+id/map_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="15dp"
            android:background="@null"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/selected_map_type"
            app:layout_constraintLeft_toRightOf="@+id/map_type1"
            app:srcCompat="@drawable/ic_hybrid" />

        <ImageButton
            android:id="@+id/map_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="15dp"
            android:background="@null"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/selected_map_type"
            app:layout_constraintLeft_toRightOf="@+id/map_type2"
            app:srcCompat="@drawable/ic_aerial" />

        <android.support.constraint.Group
            android:id="@+id/group_map_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="map_type1,map_type2,map_type3" />

    </android.support.constraint.ConstraintLayout>
</layout>