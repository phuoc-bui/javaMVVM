<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/helpDefaultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/helpBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_red_bottom_border"
            android:text="@string/lbl_help"
            android:textColor="@color/navigationnarTextTintColor"
            android:textSize="@dimen/text_size"
           />

        <Button
            android:id="@+id/optBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/border_shadow"
            android:text="@string/lbl_option"
            android:textColor="@color/navigationnarTextTintColor"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/helpSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/help_layout"
            android:background="@color/backgroundColor"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rowFG"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                       >

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            app:srcCompat="@drawable/help_page" />

                        <TextView

                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="17dp"
                            android:text="@string/help_tagline"
                            android:textColor="@color/textColorGrey"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_gray" />


                    <TextView
                        android:id="@+id/info1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:maxLines="2"
                        android:text="@string/help_online_help_info"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="5dp"

                            android:background="@color/light_gray" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/default_padding_helpScreen"
                            android:paddingTop="@dimen/default_padding_helpScreen"
                            >


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:text="@string/help_online_help_heading"
                                android:textColor="#000"
                                android:textSize="@dimen/plus_text_size" />

                            <ImageButton
                                android:id="@+id/online_help_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:gravity="center_horizontal"
                                app:srcCompat="@drawable/icon_email" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="05dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/info2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginTop="10dp"
                        android:gravity="left"

                        android:maxLines="2"
                        android:text="@string/help_email_support_info"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="05dp"
                            android:background="@color/light_gray" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/default_padding_helpScreen"
                            android:paddingTop="@dimen/default_padding_helpScreen"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:text="@string/help_email_support_heading"
                                android:textColor="#000"
                                android:textSize="@dimen/plus_text_size" />

                            <ImageButton
                                android:id="@+id/email_support_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:gravity="center_horizontal"
                                app:srcCompat="@drawable/icon_new_tab" />


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="05dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/info3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginTop="10dp"
                        android:gravity="left"

                        android:maxLines="5"
                        android:text="@string/help_app_support_info"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/info4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginTop="10dp"
                        android:gravity="left"

                        android:maxLines="2"
                        android:text="@string/help_app_support_heading"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="05dp"
                            android:background="@color/light_gray" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/default_padding_helpScreen"
                            android:paddingTop="@dimen/default_padding_helpScreen"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/app_support_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:text="0"
                                android:textColor="#000"
                                android:textSize="@dimen/plus_text_size" />


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="05dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/info5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginTop="10dp"
                        android:gravity="left"

                        android:maxLines="2"
                        android:text="@string/help_app_version_heading"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="05dp"
                            android:background="@color/light_gray" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/default_padding_helpScreen"
                            android:paddingTop="@dimen/default_padding_helpScreen"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/app_version_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:text="0"
                                android:textColor="#000"
                                android:textSize="@dimen/plus_text_size" />


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="05dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/info6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginTop="10dp"
                        android:gravity="left"

                        android:maxLines="3"
                        android:text="@string/help_about_info"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="05dp"
                            android:background="@color/light_gray" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/default_padding_helpScreen"
                            android:paddingTop="@dimen/default_padding_helpScreen"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:text="@string/help_about_heading"
                                android:textColor="#000"
                                android:textSize="@dimen/plus_text_size" />
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:id="@+id/about_us_btn"
                                android:gravity="center_horizontal"
                                app:srcCompat="@drawable/icon_right" />


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="05dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"

                            android:layout_gravity="bottom"
                            android:layout_marginBottom="05dp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/default_padding_helpScreen"
                            android:paddingTop="@dimen/default_padding_helpScreen"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:text="@string/help_terms_heading"
                                android:textColor="#000"
                                android:textSize="@dimen/plus_text_size" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:id="@+id/terms_condition_btn"
                                android:gravity="center_horizontal"
                                app:srcCompat="@drawable/icon_right" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="05dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_gravity="bottom"
                        android:layout_marginBottom="05dp" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/watch_intro"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"

                            android:background="@color/light_gray"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="05dp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/default_padding_helpScreen"
                            android:paddingTop="@dimen/default_padding_helpScreen"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:text="@string/help_logout_heading"
                                android:textColor="#000"
                                android:textSize="@dimen/plus_text_size" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:gravity="center_horizontal"
                                app:srcCompat="@drawable/icon_right" />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/option_layout"
            android:background="@color/backgroundColor"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:id="@+id/notification_row"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/default_padding"
                    android:padding="@dimen/default_padding">

                    <ImageView

                        app:srcCompat="@drawable/icon_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:paddingRight="10dp"/>

                    <TextView
                        android:id="@+id/WzName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_weight="0.40"
                        android:textColor="#000"
                        android:text="@string/lbl_sendNotification"
                        android:textSize="@dimen/text_size"
                        />

                    <Button
                        android:id="@+id/testNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="0.41"
                        android:background="@drawable/button_curve"

                        android:text="@string/btn_test"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_below="@+id/notification_row"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/light_gray" />

            </LinearLayout>

        </RelativeLayout>

    </ViewSwitcher>

</LinearLayout>