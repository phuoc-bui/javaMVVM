<layout>

    <data>

        <variable
            name="viewModel"
            type="com.redhelmet.alert2me.ui.home.HomeViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Widget.A2M.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tabs"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            style="@style/Widget.A2M.TabLayout.Bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_tab_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tabPaddingBottom="8dp"
            app:tabPaddingTop="8dp"
            app:tabGravity="fill"
            app:tabMode="fixed" />

        <com.redhelmet.alert2me.ui.widget.FadingSnackbar
            android:id="@+id/snackbar"
            android:layout_width="@dimen/snackbar_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/snackbar_margin_bottom_bab"
            android:layout_marginEnd="@dimen/snackbar_margin_end_fab"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>